<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:background="@drawable/card_background"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="70dp"
        />
    <TextView
        android:id="@+id/first_option"
        android:background="@drawable/card_background_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="George Bush"
        android:layout_below="@id/flashcard_question"
        android:gravity="center"
        android:visibility="invisible"


        />
    <TextView
        android:id = "@+id/second_option"
        android:background="@drawable/card_background_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bill Clinton"
        android:layout_below="@id/first_option"
        android:gravity="center"
        android:visibility="invisible"
        />
    <TextView
        android:id = "@+id/third_option"
        android:background="@drawable/card_background_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Elizabeth Warren"
        android:layout_below="@+id/second_option"
        android:gravity="center"
        android:visibility="invisible"
        />
    <TextView
        android:id= "@+id/fourth_option"
        android:background="@drawable/card_background_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Barack Obama"
        android:layout_below="@+id/third_option"
        android:gravity="center"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/flashcard_answer"
        android:background="#B2FF66"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:visibility="invisible"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:layout_centerHorizontal="true"
        android:textSize="40sp" />
    <ImageView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/toggle_choices_visibility"
        android:src="@drawable/ic_iconmonstr_eye_5"
        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"

        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id = "@+id/toggle_choices_visibility_2"
        android:layout_alignParentBottom="true"
        android:src = "@drawable/ic_iconmonstr_eye_8"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>




</RelativeLayout>